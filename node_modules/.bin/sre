#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/d/ObsidianBases/tabakovsky-wiki/tabakovskiy-wiki/node_modules/speech-rule-engine/bin/node_modules:/mnt/d/ObsidianBases/tabakovsky-wiki/tabakovskiy-wiki/node_modules/speech-rule-engine/node_modules:/mnt/d/ObsidianBases/tabakovsky-wiki/tabakovskiy-wiki/node_modules:/mnt/d/ObsidianBases/tabakovsky-wiki/node_modules:/mnt/d/ObsidianBases/node_modules:/mnt/d/node_modules:/mnt/d/ObsidianBases/tabakovsky-wiki/tabakovskiy-wiki/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/d/ObsidianBases/tabakovsky-wiki/tabakovskiy-wiki/node_modules/speech-rule-engine/bin/node_modules:/mnt/d/ObsidianBases/tabakovsky-wiki/tabakovskiy-wiki/node_modules/speech-rule-engine/node_modules:/mnt/d/ObsidianBases/tabakovsky-wiki/tabakovskiy-wiki/node_modules:/mnt/d/ObsidianBases/tabakovsky-wiki/node_modules:/mnt/d/ObsidianBases/node_modules:/mnt/d/node_modules:/mnt/d/ObsidianBases/tabakovsky-wiki/tabakovskiy-wiki/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../speech-rule-engine/bin/sre" "$@"
else
  exec node  "$basedir/../speech-rule-engine/bin/sre" "$@"
fi
